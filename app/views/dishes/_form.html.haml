= form_for @dish do |f|
  - if @dish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dish.errors.count, "error")} prohibited this dish from being saved:"
      %ul
        - @dish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :allergy_info
    = f.text_area :allergy_info
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :calories
    = f.number_field :calories
  .field
    = f.label :img_url
    = f.text_field :img_url
  .actions
    = f.submit 'Save'
